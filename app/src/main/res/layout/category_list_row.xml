<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="3dp"
    android:paddingBottom="3dp">

    <RelativeLayout
        android:id="@+id/category_list_spinner_layout"
        android:layout_width="50dp"
        android:layout_height="40dp">

        <RelativeLayout
            android:id="@+id/category_list_row_spinner_circle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/category_circle_margin"
            android:layout_marginTop="@dimen/category_circle_margin_small"
            android:layout_marginRight="@dimen/category_circle_margin"
            android:layout_marginBottom="@dimen/category_circle_margin_small"
            android:background="@drawable/shape_item_cetagory_spinner" />
    </RelativeLayout>

    <EditText
        android:id="@+id/category_list_row_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <ImageButton
        style="@style/Widget.AppCompat.ActionButton"
        android:id="@+id/category_list_row_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_delete"
        app:tint="@color/dark_grey" />

    <ImageButton
        style="@style/Widget.AppCompat.ActionButton"
        android:id="@+id/category_list_row_up_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_arrow_up"
        app:tint="@color/dark_grey" />
</LinearLayout>